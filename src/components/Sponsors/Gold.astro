        <div class="grid place-items-center content-center" data-aos="zoom-in">
            <img class="w-3/4 max-w-60 h-full object-cover hover:-0 flex align-middle justify-center" src={pat_oro_2.src} alt={goldsponsor.frontmatter.gold4_alt}>
            <div class="w-full text-center flex flex-col align-middle items-center justify-center">
                <a href={goldsponsor.frontmatter.gold4_href} target="_blank" class="appearance-none"><Linksvg /></a>
            </div>
            
        </div>
        <div class="grid place-items-center content-center" data-aos="zoom-in">
            <Image src={logofortem} alt={goldsponsor.frontmatter.gold5_alt} class="w-3/4 max-w-60 lg:max-w-fit h-full object-cover hover:-0 flex align-middle justify-center" />
            <div class="w-full text-center flex flex-col align-middle items-center justify-center">
                <a href={goldsponsor.frontmatter.gold5_href} target="_blank" class="appearance-none"><Linksvg /></a>
            </div>
        </div>
        <div class="grid place-items-center content-center" data-aos="zoom-in">
            <img class="w-3/4 max-w-80 h-full object-cover hover:-0 flex align-middle justify-center" src={pat_oro_1.src} alt={goldsponsor.frontmatter.gold6_alt}>
            <div class="w-full text-center flex flex-col align-middle items-center justify-center">
            <a href={goldsponsor.frontmatter.gold6_href} target="_blank" class="appearance-none"><Linksvg /></a>
