---
import { Image } from 'astro:assets';

import pat_oro_1 from '../../../src/img/ORO/CONKAMEX.svg';
import pat_oro_2 from '../../../src/img/ORO/urconsa_white_1.svg';
import pat_oro_3 from '../../../src/img/ORO/mangodeck_white_1.svg';
import pat_oro_4 from '../../../src/img/ORO/YENEKAMU.svg';
import pat_oro_5 from '../../../src/img/ORO/fase_white_1.svg';
import logofortem from '../../../src/img/ORO/fortemcapital_white_1.svg';
import pat_oro_7 from '../../../src/img/ORO/delmar_white_1.svg';
import pat_oro_8 from '../../../src/img/ORO/costapalmas_white_1.svg';
