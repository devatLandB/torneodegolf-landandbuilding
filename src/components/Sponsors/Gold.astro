import Linksvg from '../widgets/Linksvg.astro';

import * as goldsponsor from '../../content/SponsorInfo/gold/gold-sponsors.md';
---

<div class="py-8">
    <h1 class="w-full text-center uppercase text-5xl tracking-wider text-white p-4">Oro</h1>
    <hr class="h-px my-2 bg-gray-200 border-0 dark:bg-gray-700 w-80 mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3">
        <div class="grid place-items-center content-center" data-aos="zoom-in">
            <img class="w-3/4 max-w-60 h-full object-cover hover:-0 flex align-middle justify-center" src={pat_oro_5.src} alt={goldsponsor.frontmatter.gold1_alt}>
            <div class="w-full text-center flex flex-col align-middle items-center justify-center">
                <a href={goldsponsor.frontmatter.gold1_href} target="_blank" class="appearance-none"><Linksvg /></a>
            </div>
        </div>
        <div class="grid place-items-center content-center" data-aos="zoom-in">
            <img class="w-3/4 max-w-60 h-full object-cover  hover:-0" src={pat_oro_4.src} alt={goldsponsor.frontmatter.gold2_alt}>
            <div class="w-full text-center flex flex-col align-middle items-center justify-center">
                <a href={goldsponsor.frontmatter.gold2_href} target="_blank" class="appearance-none"><Linksvg /></a>
            </div>
            
        </div>
        <div class="grid place-items-center  content-center" data-aos="zoom-in">
            <img class="w-3/4 max-w-60 h-full object-cover  hover:-0" src={pat_oro_3.src} alt={goldsponsor.frontmatter.gold3_alt}>
